<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.RegisterActivity">


    <LinearLayout
        android:id="@+id/layoutLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="#000000"
            android:text="Please fill the details"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="25dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Register_ImageView_profileImg"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="25dp"
                app:srcCompat="@drawable/register_photo"

                />

            <Button
                android:id="@+id/Register_btn_uploadImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="choose an image"
                android:textSize="10dp"
                android:textColor="#050505"
                android:textStyle="bold"
                android:background="@drawable/ic_button_choose_image"/>


        </LinearLayout>

        <EditText
            android:id="@+id/Register_EditText_fullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:textColorHint="#000000"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textSize="20dp"
            android:hint="Full Name"
            android:inputType="textEmailAddress" />
        <EditText
            android:id="@+id/Register_EditText_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textSize="20dp"
            android:hint="Email" />



        <EditText
            android:id="@+id/Register_EditText_phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:textColorHint="#000000"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textSize="20dp"
            android:hint="Phone Number" />

        <EditText
            android:id="@+id/Register_EditText_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:textColorHint="#000000"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textSize="20dp"
            android:hint="Password"
            android:ems="10"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/Register_EditText_Location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:ems="10"
            android:hint="Your Location"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/Register_EditText_idNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:textColorHint="#000000"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textSize="20dp"
            android:hint="ID number" />


        <EditText
            android:id="@+id/Register_EditText_tellAboutYourSelf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:textColorHint="#000000"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textSize="20dp"
            android:hint="Tell about your self" />

        <Button
            android:id="@+id/Register_btn_Register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="Register"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/ic_button"/>

        <TextView
            android:id="@+id/Register_TextView_errorMessage"
            android:padding="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="invisible"
            android:text="info"
            android:textColor="#F50000"/>


    </LinearLayout>

</RelativeLayout>